pipeline {
    agent {
      label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('docker')
     registry = "raju0055/backend-lms"
        registryCredential = 'docker'
        dockerImage = ''
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t raju0055/backend-lms .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push raju055/backend-lms'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f raju0055/backend-lms'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe raju0055/backend-lms'
            }
        }
    }
}
